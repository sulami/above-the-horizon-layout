<UIView xml="../Components/Background.xml">
    <UIView xml="../Components/SafeArea.xml">
        <UITableView
            style="plain"
            separatorStyle="none"
            >
            <UITableViewCell
                selectionStyle="{UITableViewCell.SelectionStyle.none}"
                reuseIdentifier="textLabel"
                >
                <UIStackView
                    axis="horizontal"
                    alignment="{UIStackView.Alignment.center}"
                    distribution="{UIStackView.Distribution.fill}"
                    left="10"
                    right="100% - 10"
                    height="100%">
                    <UILabel
                        text="{contentText}"
                        textAlignment="center"
                        font="Menlo 10"
                        width="100%"
                        />
                </UIStackView>
            </UITableViewCell>
            <UITableViewCell
                selectionStyle="{UITableViewCell.SelectionStyle.none}"
                reuseIdentifier="textField"
                >
                <UIStackView
                    axis="horizontal"
                    alignment="{UIStackView.Alignment.center}"
                    distribution="{UIStackView.Distribution.equalSpacing}"
                    left="10"
                    right="100% - 10"
                    height="100%">
                    <UILabel
                        text="{labelText}"
                        />
                    <UITextField
                        text="{contentText}"
                        borderStyle="{UITextField.BorderStyle.roundedRect}"
                        width="parent.width / 2"
                        />
                </UIStackView>
            </UITableViewCell>
        </UITableView>
    </UIView>
</UIView>
